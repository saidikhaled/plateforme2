<% include ./partials/header %>
<section>
    <div class="container p-2 mt-lg-5 d-flex">
        <div class="card card-body">
                <h1 class="text-center mb-3">Storm</h1>
                <% include ./partials/messages %>
                <form action="/brainstorming/addStorm" method="POST">
                  
                    <div class="form-group">
                        <label for="name">Storm name</label>
                        <input type="text" class="form-control" name="name" id="name"
                            placeholder="Make it interesting, fun and informative "
                            value="<%= typeof name != 'undefined' ? name : '' %>" />
                    </div>
                    <div class="form-group">
                            <label for="type">Storm type</label>
                            <input type="text" class="form-control" name="type" id="type"
                                placeholder="school / open"
                                value="<%= typeof type != 'undefined' ? type : '' %>" />
                        </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea class="form-control" name="description" id="description" rows="3"></textarea>
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-block">submit</button>

                </form>
            </div>
    </div>
</section>