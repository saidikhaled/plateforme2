<% include ./partials/header %>
<section class="container">
    <h1>share files page</h1>
    <input type="file" id="real-file" hidden />
    <button type="button" id="file_button">Choose a file</button>
    <span id="file_name_text">No file chosen, yet</span>


    <script type="text/javascript">
           const realFileBtn = document.getElementById("real-file");
           const fileBtn = document.getElementById("file_button");
           const fileNameText = document.getElementById("file_name_text");

           fileBtn.addEventListener("click", function(){
               realFileBtn.click();
           })

           realFileBtn.addEventListener("change",function(){
               if(realFileBtn.value) {
                   fileNameText.innerHTML = realFileBtn.value.match(/[\/\\]([\w\d\s\.\-\(\)]+)$/)[1];
               }else {
                   fileNameText.innerHTML = "No file chosen,yet." 
               }
           })
    </script>
</section>